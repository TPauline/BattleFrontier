<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane id="windowRoot" fx:id="windowRoot" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignInSceneController">
   <right>
      <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      
   </bottom>
   <bottom>
      <HBox id="buttonBarHBox" fillHeight="false" minHeight="100.0" minWidth="900.0" opacity="0.6" spacing="100.0">
         <children>
          <Button id="homeButton" fx:id="homeButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleHomeButtonClick" opacity="0.6" pickOnBounds="false" prefHeight="100.0" prefWidth="100.0" text="HOME" textAlignment="CENTER">
               <graphic>
                  <Icon content="HELP_OUTLINE" />
               </graphic>
            </Button>
            <Button id="continueButton" fx:id="continueButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleContinueButtonClick" opacity="0.6" pickOnBounds="false" prefHeight="100.0" prefWidth="100.0" text="CONTINUE" textAlignment="CENTER">
               <graphic>
                  <Icon content="PLAY_CIRCLE_OUTLINE" />
               </graphic>
            </Button>
            <Button id="exitButton" fx:id="exitButton" contentDisplay="TOP" layoutX="120.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleExitButtonClick" opacity="0.6" pickOnBounds="false" prefHeight="100.0" prefWidth="100.0" text="EXIT" textAlignment="CENTER">
               <graphic>
                  <Icon content="HELP_OUTLINE" />
               </graphic>
            </Button>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
   </bottom>
   <center>
      <HBox id="themeHbox" fx:id="themeHbox" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </center>
   <left>
      <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" text="Button" />
        </buttons>
      </ButtonBar>
   </top>
</BorderPane>
