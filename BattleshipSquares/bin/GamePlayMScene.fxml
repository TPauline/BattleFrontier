<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="windowRoot" fx:id="windowRoot" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GamePlayController">
  
   

   <bottom>
      
   </bottom>
   <bottom>
      <HBox id="buttonBarHBox" fx:id="buttonBarHBox" fillHeight="false" minHeight="100.0" minWidth="900.0" opacity="0.6" spacing="100.0">
         <children>
          <Button id="homeButton" fx:id="homeButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleHomeButtonClick" opacity="0.6" pickOnBounds="false" prefHeight="100.0" prefWidth="100.0" text="HOME" textAlignment="CENTER">
               <graphic>
                  <Icon content="HELP_OUTLINE" />
               </graphic>
            </Button>
            <Button id="exitButton" fx:id="exitButton" contentDisplay="TOP" layoutX="120.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleExitButtonClick" opacity="0.6" pickOnBounds="false" prefHeight="100.0" prefWidth="100.0" text="EXIT" textAlignment="CENTER">
               <graphic>
                  <Icon content="HELP_OUTLINE" />
               </graphic>
            </Button>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
   </bottom>
</BorderPane>
